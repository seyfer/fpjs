{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "es5",
        "module": "es2015",
        "lib": [
            "dom",
            "es6",
            "es2017",
            "es2019",
            "dom.iterable"
        ],
        "jsx": "react",
        "allowJs": true,
        "checkJs": false,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "removeComments": true,
        "noEmit": false,
        "isolatedModules": true,
        "noEmitOnError": true,
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "importsNotUsedAsValues": "preserve"
    },
    "exclude": [
        "node_modules"
    ]
}
